{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Staged Chat JSON",
  "type": "object",
  "required": [
    "chat_id",
    "messages",
    "source",
    "timestamps"
  ],
  "properties": {
    "chat_id": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": [
        "ai"
      ],
      "properties": {
        "ai": {
          "type": "string"
        },
        "exporter": {
          "type": "string"
        }
      }
    },
    "timestamps": {
      "type": "object",
      "required": [
        "created_utc"
      ],
      "properties": {
        "created_utc": {
          "type": "string"
        },
        "created_local": {
          "type": "string"
        },
        "tz": {
          "type": "string"
        }
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "role",
          "content",
          "ts_utc"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "system",
              "user",
              "assistant",
              "tool"
            ]
          },
          "content": {
            "type": "string"
          },
          "ts_utc": {
            "type": "string"
          },
          "ts_local": {
            "type": "string"
          },
          "meta": {
            "type": "object"
          }
        }
      }
    },
    "meta": {
      "type": "object"
    }
  }
}